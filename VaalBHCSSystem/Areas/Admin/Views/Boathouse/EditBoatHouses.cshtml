@model VaalBeachClub.Models.ViewModels.BoatHouses.BoatHouseInfoViewModel

@{
    ViewData["Title"] = "EditBoatHouses";
}


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Edit BoatHouse Size</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Dashboard_1", "Dashboards")">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a>Forms</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>Text Editor</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content">
    <div class="row">

        <div class="col-lg-4">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Wyswig Summernote Editor</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="#" class="dropdown-item">Config option 1</a>
                            </li>
                            <li>
                                <a href="#" class="dropdown-item">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content  ">

                    <form asp-action="AddBoatHouses">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="BoatHouseNumber" class="control-label"></label>
                            <input asp-for="BoatHouseNumber" class="form-control" />
                            <span asp-validation-for="BoatHouseNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.BoatHouseSizes" class="control-label"></label>
                            <select asp-for="BoatHouseSizeID" asp-items="Model.BoatHouseSizes" class="Select_BoatHouseSizes full-width "></select>

                        </div>


                        <div class="form-group">
                            <input type="submit" value="Add" class="btn btn-primary" />
                        </div>
                    </form>


                </div>
            </div>
        </div>
        <
    </div>
</div>
<environment names="Development,Staging,Production">
    <link rel="stylesheet" href="~/lib/select2/dist/css/select2.min.css" />
</environment>
@section Scripts {
    <environment names="Development,Staging,Production">
        <script src="~/lib/select2/dist/js/select2.min.js"></script>
    </environment>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        $(document).ready(function () {

            $(".Select_BoatHouseSizes").select2();
        });
    </script>
}
